{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "rootDir": ".",
    "target": "es5",
    "sourceMap": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "lib": ["es2015", "es2016", "dom"]
  },
  "exclude": [
    "node_modules"
  ]
}
